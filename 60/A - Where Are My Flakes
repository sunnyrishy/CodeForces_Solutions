#include<bits/stdc++.h>using namespace std;Â int main () {    int n, m;    cin>>n>>m;    if(m == 0){        cout<<n<<"\n";        return 0;    }    cin.ignore(numeric_limits<streamsize>::max(), '\n');    int ans = -1;    int left = INT_MAX, right = INT_MIN;    for(int i = 0; i < m; i++){        string s;        getline(cin, s);        int num = 0;        for(char c : s){                if(isdigit(c)){                    num = num*10 + (c-'0');                }            }        if(s.find("left") != string::npos){            left = min(left, num);        }        if (s.find("right") != string::npos){            right = max(right, num);        }    }    if(right == INT_MIN && left != INT_MAX){        if(n == 1) ans = -1;        else ans = left-1;        cout<<ans<<"\n";        return 0;    }    if(right != INT_MIN && left == INT_MAX){        if(n == right){            ans = -1;        }        else ans = n-right;        cout<<ans<<"\n";        return 0;    }    ans = left-right-1;    if(ans < 1){        cout<<-1<<"\n";        return 0;    }    cout<<ans<<"\n";    return 0;}